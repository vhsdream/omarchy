#!/bin/bash

screensaver_in_focus() {
  hyprctl activewindow -j | jq -e '.class == "Screensaver"' >/dev/null 2>&1
}

    while pgrep -x tte >/dev/null; do
      if read -n 1 -t 0.01; then
        pkill -x tte 2>/dev/null
        pkill -f "kitty --class Screensaver" 2>/dev/null
        exit 0
      fi
    done
  done
done
